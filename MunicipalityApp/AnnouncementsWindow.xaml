<Window x:Class="MunicipalityApp.AnnouncementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Announcements" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryDarkTealBrush}"
        Foreground="{StaticResource NeutralWhiteBrush}">

    <Grid Margin="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Latest Announcements" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,15"
                       Foreground="{StaticResource AccentYellowBrush}"/>

            <!-- Announcements List -->
            <ListBox Background="{StaticResource NeutralWhiteBrush}" 
                     Foreground="{StaticResource PrimaryDarkTealBrush}" 
                     BorderThickness="0"
                     Padding="5">
                <ListBoxItem Content="⚡ Planned Power Outage in Zone 3 on Friday"/>
                <ListBoxItem Content="💧 Water Supply Maintenance – Downtown Area"/>
                <ListBoxItem Content="🛣️ Road Repair Scheduled for Main Street"/>
            </ListBox>

            <!-- Back Button -->
            <Button Content="Back to Main Menu" 
                    Height="40" 
                    Margin="0,15,0,0"
                    Background="{StaticResource AccentYellowBrush}" 
                    Foreground="{StaticResource PrimaryDarkTealBrush}" 
                    FontWeight="Bold"
                    Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>

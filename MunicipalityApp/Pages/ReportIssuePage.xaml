<Page x:Class="MunicipalityApp.Pages.ReportIssuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Report an Issue"
      Background="{StaticResource AppBackgroundGradient}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Border Style="{StaticResource CenteredPageContainer}">
                <Border Style="{StaticResource MainCard}" Width="560" MinWidth="520" MaxWidth="820">
                    <StackPanel>

                <!-- Progress Bar -->
                <ProgressBar x:Name="progressBar" 
                         Height="15" 
                         Minimum="0" 
                         Maximum="100" 
                         Value="0" 
                         Margin="0,0,0,25"
                         Foreground="{StaticResource AccentYellowBrush}"
                         Background="{StaticResource ProgressBackgroundBrush}"
                         BorderThickness="0"/>

                <TextBlock Text="Report an Issue" 
                           Style="{StaticResource TitleText}"
                           Foreground="{StaticResource PrimaryDarkTealBrush}"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Title input -->
                <TextBlock Text="Title" 
                       Margin="0,10,0,5"
                       Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <TextBox x:Name="txtTitle" 
                         Height="40" 
                         Margin="0,0,0,15"
                         Style="{StaticResource TextBoxStyle}"
                         Tag="Enter issue title"
                         HorizontalAlignment="Stretch"/>

                <!-- Category dropdown -->
                <TextBlock Text="Category" 
                       Margin="0,5,0,5"
                       Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <ComboBox x:Name="cmbCategory" 
                         Height="40" 
                         Margin="0,0,0,15"
                         Style="{StaticResource ComboBoxStyle}"
                         HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Electricity"/>
                    <ComboBoxItem Content="Water"/>
                    <ComboBoxItem Content="Roads"/>
                    <ComboBoxItem Content="Waste"/>
                </ComboBox>

                <!-- Description input -->
                <TextBlock Text="Description" 
                       Margin="0,5,0,5"
                       Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <TextBox x:Name="txtDescription" 
                         AcceptsReturn="True" 
                         Height="90" 
                         TextWrapping="Wrap"
                         Style="{StaticResource TextBoxStyle}"
                         Margin="0,0,0,15"
                         Tag="Enter detailed description"
                         HorizontalAlignment="Stretch"/>

                <!-- Attach media -->
                <Button Content="Attach Media" 
                    Style="{StaticResource AccentButton}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,5" Click="btnAttachMedia_Click"/>
                <TextBlock x:Name="lblFilePath" 
                       Text="No file selected." 
                       Margin="0,0,0,20"
                       FontStyle="Italic"
                       Foreground="{StaticResource NeutralFaintBrush}"/>

                <!-- Submit button -->
        <Button Content="Submit Report" 
            Style="{StaticResource PrimaryButton}"
            Margin="0,10,0,15" 
            FontSize="{StaticResource MediumFontSize}"
            Height="36" Click="btnSubmit_Click"/>

                <!-- Back button -->
                <Button Content="Back to Main Menu" 
                    Style="{StaticResource PrimaryButton}"
                    Background="Transparent"
                    BorderBrush="{StaticResource PrimaryDarkTealBrush}"
                    Foreground="{StaticResource PrimaryDarkTealBrush}" Click="btnBack_Click"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>

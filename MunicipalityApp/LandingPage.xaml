<Window x:Class="MunicipalityApp.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..." Height="400" Width="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <!-- Background with new color scheme -->
    <Grid Background="{StaticResource PrimaryDarkTealBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Logo -->
            <Image x:Name="logoContainer"
                   Source="/SA-coat-of-arms.png"
                   Width="180"
                   Height="180"
                   Opacity="0"
                   RenderTransformOrigin="0.5,0.5"
                   Margin="0,0,0,30">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                </Image.RenderTransform>
            </Image>

            <!-- Title -->
            <TextBlock x:Name="txtTitle"
                       Text="South African"
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentYellowBrush}"
                       TextAlignment="Center"
                       Opacity="0" 
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform Y="50"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Tagline -->
            <TextBlock x:Name="txtTagline"
                       Text="Connecting Citizens with Services"
                       FontSize="18"
                       Foreground="{StaticResource NeutralWhiteBrush}"
                       TextAlignment="Center"
                       Margin="0,15,0,30"
                       Opacity="0" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform Y="50"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Progress Bar -->
            <ProgressBar IsIndeterminate="True"
                         Width="300" 
                         Height="8"
                         Margin="0,40,0,0"
                         Style="{StaticResource {x:Type ProgressBar}}"
                         Foreground="{StaticResource AccentYellowBrush}"
                         Background="#1B3838"
                         BorderThickness="0">
                <ProgressBar.Resources>
                    <SolidColorBrush x:Key="ProgressBar.Background" Color="#1B3838"/>
                    <SolidColorBrush x:Key="ProgressBar.Border" Color="#1B3838"/>
                </ProgressBar.Resources>
            </ProgressBar>
        </StackPanel>

        <!-- Animations -->
        <Grid.Triggers>
            <!-- Logo Animation -->
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <!-- Logo fade in and scale up -->
                        <DoubleAnimation 
                            Storyboard.TargetName="logoContainer"
                            Storyboard.TargetProperty="Opacity"
                            From="0" To="1" Duration="0:0:0.8"/>
                        <DoubleAnimation 
                            Storyboard.TargetName="logoContainer"
                            Storyboard.TargetProperty="RenderTransform.ScaleX"
                            From="0.5" To="1" Duration="0:0:0.8"
                            DecelerationRatio="0.7"/>
                        <DoubleAnimation 
                            Storyboard.TargetName="logoContainer"
                            Storyboard.TargetProperty="RenderTransform.ScaleY"
                            From="0.5" To="1" Duration="0:0:0.8"
                            DecelerationRatio="0.7"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="txtTitle"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="txtTitle"
                                         Storyboard.TargetProperty="(TextBlock.RenderTransform).(TranslateTransform.Y)"
                                         From="50" To="0" Duration="0:0:1"/>

                        <DoubleAnimation Storyboard.TargetName="txtTagline"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:1"
                                         BeginTime="0:0:0.5"/>
                        <DoubleAnimation Storyboard.TargetName="txtTagline"
                                         Storyboard.TargetProperty="(TextBlock.RenderTransform).(TranslateTransform.Y)"
                                         From="50" To="0" Duration="0:0:1"
                                         BeginTime="0:0:0.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>

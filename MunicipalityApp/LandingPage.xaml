<Window x:Class="MunicipalityApp.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..."
        Height="420"
        Width="640"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <!-- Elegant gradient background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#004D40" Offset="0.0"/>   <!-- Deep teal -->
                <GradientStop Color="#00695C" Offset="1.0"/>   <!-- Soft transition teal -->
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Logo with glow and scale animation -->
            <Image x:Name="logoContainer"
                   Source="/SA-coat-of-arms.png"
                   Width="180"
                   Height="180"
                   Opacity="0"
                   RenderTransformOrigin="0.5,0.5"
                   Margin="0,0,0,30">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                </Image.RenderTransform>
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="0"
                                      Color="#AA000000"
                                      Opacity="0.5"/>
                </Image.Effect>
            </Image>

            <!-- Title -->
            <TextBlock x:Name="txtTitle"
                       Text="South African"
                       Style="{StaticResource TitleText}"
                       Foreground="{StaticResource AccentYellowBrush}"
                       TextAlignment="Center"
                       Opacity="0" 
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform Y="50"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Tagline -->
            <TextBlock x:Name="txtTagline"
                       Text="Connecting Citizens with Services"
                       Style="{StaticResource SubtitleText}"
                       Foreground="{StaticResource NeutralWhiteBrush}"
                       TextAlignment="Center"
                       Margin="0,15,0,30"
                       Opacity="0"
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform Y="50"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Progress Bar with rounded corners -->
            <Border CornerRadius="6" Width="320" Height="8" Background="#1AFFFFFF">
                <ProgressBar IsIndeterminate="True"
                             Foreground="{StaticResource AccentYellowBrush}"
                             Background="Transparent"
                             BorderThickness="0"/>
            </Border>
        </StackPanel>

        <!-- Entry Animations -->
        <Grid.Triggers>

            <!-- Logo fade + scale -->
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="logoContainer"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1"
                                         Duration="0:0:1"
                                         DecelerationRatio="0.7"/>
                        <DoubleAnimation Storyboard.TargetName="logoContainer"
                                         Storyboard.TargetProperty="RenderTransform.ScaleX"
                                         From="0.5" To="1"
                                         Duration="0:0:1"
                                         DecelerationRatio="0.8"/>
                        <DoubleAnimation Storyboard.TargetName="logoContainer"
                                         Storyboard.TargetProperty="RenderTransform.ScaleY"
                                         From="0.5" To="1"
                                         Duration="0:0:1"
                                         DecelerationRatio="0.8"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

            <!-- Title and tagline staggered fade/slide -->
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <!-- Title -->
                        <DoubleAnimation Storyboard.TargetName="txtTitle"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1"
                                         Duration="0:0:1.2"
                                         BeginTime="0:0:0.3"/>
                        <DoubleAnimation Storyboard.TargetName="txtTitle"
                                         Storyboard.TargetProperty="(TextBlock.RenderTransform).(TranslateTransform.Y)"
                                         From="50" To="0"
                                         Duration="0:0:1.2"
                                         BeginTime="0:0:0.3"/>

                        <!-- Tagline -->
                        <DoubleAnimation Storyboard.TargetName="txtTagline"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1"
                                         Duration="0:0:1"
                                         BeginTime="0:0:1"/>
                        <DoubleAnimation Storyboard.TargetName="txtTagline"
                                         Storyboard.TargetProperty="(TextBlock.RenderTransform).(TranslateTransform.Y)"
                                         From="50" To="0"
                                         Duration="0:0:1"
                                         BeginTime="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

        </Grid.Triggers>
    </Grid>
</Window>

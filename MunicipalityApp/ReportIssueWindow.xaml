<Window x:Class="MunicipalityApp.ReportIssueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report an Issue" 
        Height="707" 
        Width="814"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryDarkTealBrush}"
        Foreground="White">

    <Grid Margin="30">
        <Border CornerRadius="8" 
                Background="White" 
                Padding="30"
                Effect="{StaticResource DropShadowEffect}" Margin="15,17,10,0">
            <StackPanel>

                <!-- Progress Bar -->
                <ProgressBar x:Name="progressBar" 
                         Height="15" 
                         Minimum="0" 
                         Maximum="100" 
                         Value="0" 
                         Margin="0,0,0,25"
                         Foreground="{StaticResource AccentYellowBrush}"
                         Background="#E0E0E0"
                         BorderThickness="0">
                    <ProgressBar.Resources>
                        <SolidColorBrush x:Key="ProgressBar.Background" Color="#E0E0E0"/>
                        <SolidColorBrush x:Key="ProgressBar.Border" Color="#E0E0E0"/>
                    </ProgressBar.Resources>
                </ProgressBar>

                <TextBlock Text="Report an Issue" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryDarkTealBrush}"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                <!-- Title input -->
                <TextBlock Text="Title" 
                       Margin="0,10,0,5"
                       Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <TextBox x:Name="txtTitle" 
                     Height="40" 
                     Padding="10"
                     Margin="0,0,0,15"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Tag="Enter issue title"/>

                <!-- Category dropdown -->
                <TextBlock Text="Category" 
                       Margin="0,5,0,5"
                       Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <ComboBox x:Name="cmbCategory" 
                     Height="40" 
                     Padding="8"
                     Margin="0,0,0,15"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1">
                    <ComboBoxItem Content="Electricity"/>
                    <ComboBoxItem Content="Water"/>
                    <ComboBoxItem Content="Roads"/>
                    <ComboBoxItem Content="Waste"/>
                </ComboBox>

                <!-- Description input -->
                <TextBlock Text="Description" 
                       Margin="0,5,0,5"
                       Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <TextBox x:Name="txtDescription" 
                     AcceptsReturn="True" 
                     Height="60" 
                     TextWrapping="Wrap"
                     Padding="10"
                     Margin="0,0,0,15"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Tag="Enter detailed description" RenderTransformOrigin="0.5,0.5">
                </TextBox>

                <!-- Attach media -->
                <Button Content="Attach Media" 
                    Style="{StaticResource AccentButton}"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,5" 
                    Click="btnAttachMedia_Click"/>
                <TextBlock x:Name="lblFilePath" 
                       Text="No file selected." 
                       Margin="0,0,0,20"
                       FontStyle="Italic"
                       Foreground="Gray"/>

                <!-- Submit button -->
                <Button Content="Submit Report" 
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,10,0,15" 
                    FontSize="16"
                    Height="30"
                    Click="btnSubmit_Click"/>

                <!-- Back button -->
                <Button Content="Back to Main Menu" 
                    Style="{StaticResource PrimaryButton}"
                    Background="Transparent"
                    BorderBrush="{StaticResource PrimaryDarkTealBrush}"
                    Foreground="{StaticResource PrimaryDarkTealBrush}"
                    Click="btnBack_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Window x:Class="MunicipalityApp.ReportIssueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report an Issue" 
        Height="720" 
        Width="860"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Outer Layout -->
    <Grid>
        <!-- Elegant gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#004D40" Offset="0.0"/>   <!-- Deep Teal -->
                <GradientStop Color="#00695C" Offset="1.0"/>   <!-- Soft Modern Teal -->
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Card -->
    <Border CornerRadius="18"
        Background="White"
        Padding="32"
        Width="760"
        MinWidth="680"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Effect="{DynamicResource DropShadow}">
            
            <StackPanel>
                <!-- Header -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <Image Source="/SA-coat-of-arms.png" Width="60" Height="40" Margin="0,0,10,0"/>
                    <TextBlock Text="Report an Issue"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryDarkTealBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Progress -->
                <ProgressBar x:Name="progressBar"
                             Height="8"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Margin="0,0,0,20"
                             Foreground="{StaticResource AccentYellowBrush}"
                             Background="#1A000000"
                             BorderThickness="0"/>

                <!-- Title -->
                <TextBlock Text="Title"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,10,0,5"
                           Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <TextBox x:Name="txtTitle"
                         Height="38"
                         Margin="0,0,0,12"
                         Padding="10,5"
                         FontSize="14"
                         Style="{StaticResource TextBoxStyle}"
                         Tag="Enter issue title"/>

                <!-- Category -->
                <TextBlock Text="Category"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,5,0,5"
                           Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <ComboBox x:Name="cmbCategory"
                          Height="38"
                          Margin="0,0,0,12"
                          Padding="10,5"
                          FontSize="14"
                          Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem Content="Electricity"/>
                    <ComboBoxItem Content="Water"/>
                    <ComboBoxItem Content="Roads"/>
                    <ComboBoxItem Content="Waste"/>
                </ComboBox>

                <!-- Location -->
                <TextBlock Text="Location"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,5,0,5"
                           Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <ComboBox x:Name="cmbLocation"
                          Height="38"
                          Margin="0,0,0,12"
                          Padding="10,5"
                          FontSize="14"
                          IsEditable="True"
                          Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem Content="Cape Town"/>
                    <ComboBoxItem Content="Durban"/>
                    <ComboBoxItem Content="Johannesburg"/>
                    <ComboBoxItem Content="Pretoria"/>
                    <ComboBoxItem Content="Port Elizabeth"/>
                </ComboBox>

                <!-- Description -->
                <TextBlock Text="Description"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,5,0,5"
                           Foreground="{StaticResource PrimaryDarkTealBrush}"/>
                <TextBox x:Name="txtDescription"
                         AcceptsReturn="True"
                         Height="80"
                         TextWrapping="Wrap"
                         FontSize="14"
                         Padding="10"
                         Margin="0,0,0,16"
                         Style="{StaticResource TextBoxStyle}"
                         Tag="Enter detailed description"/>

                <!-- File Attach -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Attach Media"
                Style="{StaticResource InCardButton}"
                Width="130"
                Height="34"
                Click="btnAttachMedia_Click"/>
                    <TextBlock x:Name="lblFilePath"
                               Text="No file selected."
                               Margin="12,8,0,0"
                               FontStyle="Italic"
                               Foreground="{StaticResource NeutralFaintBrush}"/>
                </StackPanel>

                <Separator Margin="0,10,0,20" Opacity="0.2"/>

                <!-- Submit Button -->
        <Button Content="Submit Report"
            Style="{StaticResource PrimaryButton}"
            Height="40"
            FontSize="15"
            Margin="0,0,0,12"
            Click="btnSubmit_Click"/>

                <!-- Back Button -->
        <Button Content="Back to Main Menu"
            Background="Transparent"
            BorderBrush="{StaticResource PrimaryDarkTealBrush}"
            Foreground="{StaticResource PrimaryDarkTealBrush}"
            FontSize="14"
            Height="38"
            Click="btnBack_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Color="#22000000"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>

        <!-- Using shared DropShadow from App.xaml -->

        <!-- Fade-in animation -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1"
                                         Duration="0:0:0.8"
                                         AccelerationRatio="0.4"
                                         DecelerationRatio="0.6"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>

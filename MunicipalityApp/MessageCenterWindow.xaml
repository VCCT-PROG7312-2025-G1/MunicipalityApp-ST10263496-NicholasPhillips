<Window x:Class="MunicipalityApp.MessageCenterWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message Center" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="In-App Messages" FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,20"/>
            <ListBox x:Name="lstMessages" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
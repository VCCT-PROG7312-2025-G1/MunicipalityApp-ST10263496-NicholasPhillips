<Window x:Class="MunicipalityApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipality Service Portal"
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI Variable Display"
        Background="#F6F7F9">

    <!-- Use centralized resources from App.xaml (shadows, nav/button styles, etc.) -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0"
                CornerRadius="0,0,16,16"
                Background="#0F4C5C"
                Effect="{DynamicResource DropShadow}"
                Padding="24,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="SA-coat-of-arms.png"
                           Width="64" Height="40"
                           Margin="0,0,12,0"/>
                    <TextBlock Text="Municipality Service Portal"
                               FontSize="22"
                               Foreground="White"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">

            <Button Content="Home"
                Style="{DynamicResource ModernNavButtonStyle}"
                Click="btnHome_Click"/>
            <Button Content="Report Issue"
                Style="{DynamicResource ModernNavButtonStyle}"
                Click="btnReportIssues_Click"/>
            <Button Content="Announcements"
                Style="{DynamicResource ModernNavButtonStyle}"
                Click="btnAnnouncements_Click"/>
            <!-- Notifications tab removed per request -->
            <Button Content="Status Report"
                Style="{DynamicResource ModernNavButtonStyle}"
                Click="btnStatusReport_Click"/>
            <Button Content="Exit"
                Style="{DynamicResource ModernExitButtonStyle}"
                Click="btnExit_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content (home content merged from MainHomeWindow.xaml) -->
        <Grid Grid.Row="1" Background="#F6F7F9">
            <Border CornerRadius="18"
                    Margin="24"
                    Padding="28"
                    Background="White"
                    Effect="{DynamicResource SubtleShadow}">

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Border Style="{StaticResource CenteredPageContainer}">
                            <Border Style="{StaticResource MainCard}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Welcome to" Style="{StaticResource SubtitleText}"/>
                                    <TextBlock Grid.Row="1" Text="Municipality Issue Reporter" Foreground="{StaticResource PrimaryDarkTealBrush}" Style="{StaticResource TitleText}" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="2" Text="South African Municipal Services" Style="{StaticResource SubtitleText}" Margin="0,8,0,16"/>

                                    <StackPanel Grid.Row="3" HorizontalAlignment="Center">
                                        <TextBlock Text="Please use the navigation bar in the main window to get started." Style="{StaticResource BodyText}" Foreground="{StaticResource NeutralMutedBrush}" TextAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Border>
                    </Grid>
                </ScrollViewer>

            </Border>
        </Grid>
    </Grid>
</Window>

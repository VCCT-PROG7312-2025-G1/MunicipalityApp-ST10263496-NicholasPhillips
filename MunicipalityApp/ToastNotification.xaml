<Window x:Class="MunicipalityApp.ToastNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False">

    <Border Background="{StaticResource PrimaryTealBrush}" CornerRadius="8" Padding="10" Margin="5" Effect="{StaticResource DropShadowEffect}">
        <TextBlock x:Name="txtMessage" Style="{StaticResource BodyText}" Foreground="White" TextWrapping="Wrap"/>
    </Border>
</Window>
